<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <by.lovata.a2doc.screenDoctor.aboutDoctor.screenReviews.Fab
        android:id="@+id/fab"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_24dp"/>

    <com.gordonwong.materialsheetfab.DimOverlayFrameLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <io.codetail.widget.RevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|bottom"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/fab_sheet"
            android:layout_width="280dp"
            android:layout_height="300dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/recommend_send"
                    android:background="@drawable/button_selector"
                    android:layout_margin="10sp"
                    android:layout_alignParentBottom="true"
                    android:text="@string/review_send"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/recommend_discribtion"
                    android:layout_margin="10sp"
                    android:layout_above="@id/recommend_send"
                    android:layout_width="match_parent"
                    android:hint="@string/review_hint_discription"
                    android:maxLines="6"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/recommend_fio"
                    android:layout_margin="10sp"
                    android:maxLines="1"
                    android:hint="@string/review_hint_fio"
                    android:layout_above="@id/recommend_discribtion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </io.codetail.widget.RevealLinearLayout>

</android.support.design.widget.CoordinatorLayout>
