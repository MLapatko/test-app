<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_review"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/review_card_margin"
    card_view:cardCornerRadius="@dimen/review_card_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/review_padding">

        <TextView
            android:id="@+id/review_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/review_name_size" />

        <TextView
            android:id="@+id/review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/review_name"
            android:layout_marginLeft="@dimen/review_margin_view"
            android:layout_toRightOf="@id/review_name" />

        <TextView
            android:id="@+id/review_discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/review_name"
            android:layout_below="@id/review_name"
            android:layout_marginTop="@dimen/review_margin_view" />


        <ImageView
            android:id="@+id/review_recommend_img"
            android:layout_width="@dimen/review_recommend_size"
            android:layout_height="@dimen/review_recommend_size"
            android:layout_alignLeft="@id/review_discription"
            android:layout_below="@id/review_discription"
            android:layout_marginTop="@dimen/review_margin_view"
            android:contentDescription="@string/review_recommend" />

        <TextView
            android:id="@+id/review_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/review_recommend_img"
            android:layout_marginLeft="@dimen/review_margin_view"
            android:layout_toRightOf="@id/review_recommend_img"
            android:textColor="@color/colorRecommend" />


    </RelativeLayout>

</android.support.v7.widget.CardView>