<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="@dimen/sliding_hight">

    <include layout="@layout/doctor_profile_main_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sliding_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sliding_hight"
            android:text="@string/sliding_title"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sliding_title"/>


        <include layout="@layout/bottom_sheet" />

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>