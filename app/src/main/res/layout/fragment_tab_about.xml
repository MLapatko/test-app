<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_material_light_1"
    tools:context="by.lovata.a2doc.screenStart.screenAbout.TabAboutFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/tab_about_padding_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/tab_about_padding_top"
            android:text="@string/fragment_about_block1_label"
            android:textSize="@dimen/tab_about_label_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/tab_about_padding_top"
            android:text="@string/fragment_about_block1_info"
            android:textSize="@dimen/tab_about_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/tab_about_padding_top"
            android:text="@string/fragment_about_block2_label"
            android:textSize="@dimen/tab_about_label_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/tab_about_padding_top"
            android:text="@string/fragment_about_block2_info"
            android:textSize="@dimen/tab_about_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/tab_about_padding_top"
            android:text="@string/fragment_about_block3_label"
            android:textSize="@dimen/tab_about_label_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tab_about_padding_top"
                android:text="@string/fragment_about_block3_info1"
                android:textSize="@dimen/tab_about_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/tab_about_padding_top"
                android:text="@string/fragment_about_block3_info2"
                android:textSize="@dimen/tab_about_text_size" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/tab_about_padding_top"
            android:text="@string/fragment_about_block4_info"
            android:textSize="@dimen/tab_about_text_size" />

    </LinearLayout>


</ScrollView>
